# 生产环境配置文件
# 安全和性能优化配置

# 环境标识
NODE_ENV=production
VITE_APP_ENV=production
VITE_APP_DEBUG=false

# API 服务器配置
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=8000

# 调试配置 (生产环境受限)
VITE_DEBUG_MODE=false
VITE_ENABLE_SOURCE_MAP=false
VITE_ENABLE_CONSOLE_LOG=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_API_DEBUGGING=false

# 日志配置
VITE_LOG_LEVEL=error
VITE_LOG_MAX_ENTRIES=100
VITE_LOG_PERSIST_TO_STORAGE=false
VITE_LOG_INCLUDE_TIMESTAMP=true

# 错误报告配置
VITE_ENABLE_ERROR_REPORTING=true
VITE_ERROR_REPORT_URL=/api/errors
VITE_ERROR_INCLUDE_USER_AGENT=true
VITE_ERROR_INCLUDE_USER_DATA=false

# 性能监控配置
VITE_ENABLE_PERFORMANCE_API=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1
VITE_PERFORMANCE_REPORT_INTERVAL=300000

# 开发工具配置 (生产环境关闭)
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_COMPONENT_INSPECTOR=false
VITE_ENABLE_STATE_INSPECTOR=false
VITE_ENABLE_REACT_DEVTOOLS=false

# 特性开关
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# 构建配置
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2020
VITE_BUILD_CSS_CODE_SPLIT=true

# 安全配置 (生产环境严格)
VITE_ENABLE_CORS=true
VITE_CORS_ORIGIN=https://yourdomain.com
VITE_CONTENT_SECURITY_POLICY=true

# 生产优化
VITE_ENABLE_TREE_SHAKING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_COMPRESSION=true