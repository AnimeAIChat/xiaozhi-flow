# 开发环境配置文件
# 调试和开发工具配置

# 环境标识
NODE_ENV=development
VITE_APP_ENV=development
VITE_APP_DEBUG=true

# API 服务器配置
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=10000

# 调试配置
VITE_DEBUG_MODE=true
VITE_ENABLE_SOURCE_MAP=true
VITE_ENABLE_CONSOLE_LOG=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_API_DEBUGGING=true

# 日志配置
VITE_LOG_LEVEL=debug
VITE_LOG_MAX_ENTRIES=1000
VITE_LOG_PERSIST_TO_STORAGE=true
VITE_LOG_INCLUDE_TIMESTAMP=true

# 错误报告配置
VITE_ENABLE_ERROR_REPORTING=false
VITE_ERROR_REPORT_URL=
VITE_ERROR_INCLUDE_USER_AGENT=true
VITE_ERROR_INCLUDE_USER_DATA=false

# 性能监控配置
VITE_ENABLE_PERFORMANCE_API=true
VITE_PERFORMANCE_SAMPLE_RATE=1.0
VITE_PERFORMANCE_REPORT_INTERVAL=30000

# 开发工具配置
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_COMPONENT_INSPECTOR=true
VITE_ENABLE_STATE_INSPECTOR=true
VITE_ENABLE_REACT_DEVTOOLS=true

# 特性开关
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_EXPERIMENTAL_FEATURES=true

# 开发服务器配置
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_HTTPS=false
VITE_DEV_SERVER_OPEN=true

# 构建配置
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false
VITE_BUILD_TARGET=esnext
VITE_BUILD_CSS_CODE_SPLIT=true

# 安全配置 (开发环境较宽松)
VITE_ENABLE_CORS=true
VITE_CORS_ORIGIN=http://localhost:3000
VITE_CONTENT_SECURITY_POLICY=false